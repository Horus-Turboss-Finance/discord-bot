{
  "name": "bot",
  "version": "2.0.0",
  "main": "index.js",
  "scripts": {
    "commit": "gitmoji -c",
    "release": "standard-version",
    "release:patch": "npm run release -- --release-as patch",
    "release:minor": "npm run release -- --release-as minor",
    "release:major": "npm run release -- --release-as major",
    "age:c:bot": "age -a -o ./crypted-env -R ./keys/age-public.pub bot.production.env",
    "age:d:bot": "age -d -o ./production.env -i ./keys/sops-key.pem ./crypted-env",
    "production:d:bot": "age -d -o ./production.env -i ~/.ssh/age-key crypted-env",
    "dev": "node --env-file=production.env ./commandsRegister.js && node --env-file=production.env ./index.js",
    "staging-preprod": "npm run age:d:bot && pm2 startOrReload ./ecosystem.config.js",
    "deploy:commands": "node --env-file=production.env ./commandsRegister.js",
    "preproduction": "npm install && npm run production:d:bot && pm2 startOrReload ./ecosystem.config.js",
    "production": "npm run deploy:commands && node --env-file=production.env ./index.js"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "discord.js": "^14.21.0",
    "jsdom": "^26.1.0",
    "moment": "^2.30.1",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "standard-version": "^9.5.0"
  }
}
